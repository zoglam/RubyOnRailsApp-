<section class="block_1">
  <header id="header">
    <p id="title">Задачи</p>
    <img src="/assets/TodoIcon.png" id="imagePlus" alt="plus">  
  </header>
</section>

<section class="block_2">

      <div id="div_show">      
      <div class="container">
  <div class="row">
    <div class="col-sm">
        <% @projects.each do |project| %>        
          <div id="project_div">
            <p><%= project.title %></p>
            <% @todos.each do |newTodo| %>
              <% if newTodo.project_id == project.id %>      
                <%= form_tag url_for(action: "update", id: newTodo.id), id: "form_Checkbox", method: "put" do %>                
                <%= check_box_tag "check_Checkbox", newTodo.id, newTodo.isCompleted == true %>
                <span class="line_width">
                  <span class="text_todo_<%=String(newTodo.id)%>", id="text_todo"><%= newTodo.text %></span>
                </span>                         
                <% end %>                
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
      </div>
  </div>
</div>
</section>

<section class="block_3" style="display: none">
  <%= render 'createTodo' %>
</section>